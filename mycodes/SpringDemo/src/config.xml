			<value>pointcutadvisor2</value>
			<value>pointcutadvisor3</value>
			<value>pointcutadvisor4</value>
			<value>exportAdvice</value>
		</list>
	</property>
	<property name="proxyInterfaces">
		<list>
			<value>spring.ShoeSeller</value>
			<value>spring.Export</value>
		</list>
	</property>
</bean>
